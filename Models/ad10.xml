<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>ad10.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Arsenal-Delanne-10/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>voletG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletD</object-name>
    <object-name>montants</object-name>
    <object-name>aile2</object-name>
    <object-name>profondeurGE</object-name>
    <object-name>profondeurGI</object-name>
    <object-name>profondeurDI</object-name>
    <object-name>profondeurDE</object-name>
    <object-name>derives</object-name>
    <object-name>directionG</object-name>
    <object-name>directionD</object-name>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name> 
    <object-name>roueA</object-name> 

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass_shader.png</texture>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>voletG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletD</object-name>
    <object-name>montants</object-name>
    <object-name>aile2</object-name>
    <object-name>profondeurGE</object-name>
    <object-name>profondeurGI</object-name>
    <object-name>profondeurDI</object-name>
    <object-name>profondeurDE</object-name>
    <object-name>derives</object-name>
    <object-name>directionG</object-name>
    <object-name>directionD</object-name>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name> 
    <object-name>roueA</object-name> 

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Interieur -->
  <model>
    <path>Aircraft/Arsenal-Delanne-10/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>/engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.359 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.275 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep> -15.0 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0.0 </dep></entry>
      <entry><ind>  0.75 </ind><dep>  15.0 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.566 </x1-m>
      <y1-m> -4.841 </y1-m>
      <z1-m>  1.623 </z1-m>
      <x2-m> -0.240 </x2-m>
      <y2-m> -3.446 </y2-m>
      <z2-m>  1.528 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>/surface-positions/right-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep> -15.0 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0.0 </dep></entry>
      <entry><ind>  0.75 </ind><dep>  15.0 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.240 </x1-m>
      <y1-m>  3.446 </y1-m>
      <z1-m>  1.528 </z1-m>
      <x2-m> -0.566 </x2-m>
      <y2-m>  4.841 </y2-m>
      <z2-m>  1.623 </z2-m>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>/surface-positions/flaps-pos-norm</property>
    <factor>45.0</factor>
    <axis>
      <x1-m> -0.240 </x1-m>
      <y1-m> -3.446 </y1-m>
      <z1-m>  1.486 </z1-m>
      <x2-m>  0.185 </x2-m>
      <y2-m> -1.633 </y2-m>
      <z2-m>  1.347 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>/surface-positions/flaps-pos-norm</property>
    <factor>45.0</factor>
    <axis>
      <x1-m>  0.185 </x1-m>
      <y1-m>  1.633 </y1-m>
      <z1-m>  1.347 </z1-m>
      <x2-m> -0.240 </x2-m>
      <y2-m>  3.446 </y2-m>
      <z2-m>  1.486 </z2-m>
    </axis>
  </animation>

  <!-- Profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeurGI</object-name>
    <property>/controls/flight/elevator</property>
    <factor> 15 </factor>
    <axis>
      <x1-m>  2.716 </x1-m>
      <y1-m> -2.206 </y1-m>
      <z1-m>  0.371 </z1-m>
      <x2-m>  2.575 </x2-m>
      <y2-m> -0.458 </y2-m>
      <z2-m>  0.207 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>profondeurDI</object-name>
    <property>/controls/flight/elevator</property>
    <factor> 15 </factor>
    <axis>
      <x1-m> 2.575 </x1-m>
      <y1-m> 0.458 </y1-m>
      <z1-m> 0.207 </z1-m>
      <x2-m> 2.716 </x2-m>
      <y2-m> 2.206 </y2-m>
      <z2-m> 0.371 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>directionG</object-name>
    <property>/surface-positions/rudder-pos-norm</property>
    <factor> 20.0 </factor>
    <center>
      <x-m>  3.094 </x-m>
      <y-m> -3.640 </y-m>
      <z-m>  0.797 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y> 
      <z> 1 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>directionD</object-name>
    <property>/surface-positions/rudder-pos-norm</property>
    <factor> 20.0 </factor>
    <center>
      <x-m> 3.094 </x-m>
      <y-m> 3.640 </y-m>
      <z-m> 0.797 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y> 
      <z> 1 </z>
    </axis>
  </animation>
  
  <!-- Sortie/Rentrée du train -->
  <animation>
    <name>TrainG</name>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 42 </dep></entry>
      <entry><ind> 1 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.070 </x-m>
      <y-m> -0.273 </y-m>
      <z-m> -0.220 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y> 
      <z>  1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -95 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.070 </x-m>
      <y-m> -0.273 </y-m>
      <z-m> -0.220 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainD</name>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -42 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.070 </x-m>
      <y-m>  0.273 </y-m>
      <z-m> -0.220 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y> 
      <z>  1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -95 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.070 </x-m>
      <y-m>  0.273 </y-m>
      <z-m> -0.220 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.070 </x-m>
      <y-m> -1.054 </y-m>
      <z-m> -1.437 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.070 </x-m>
      <y-m>  1.054 </y-m>
      <z-m> -1.437 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>/gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  2.157 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.538 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

